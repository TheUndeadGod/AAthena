<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    tools:context=".MostraInfo">

    <TextView
        android:id="@+id/col1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="@string/des_orientacao" />

    <TextView
        android:id="@+id/linha1_resp"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textAlignment="center"
        android:layout_toEndOf="@id/col1" />

    <TextView
        android:id="@+id/col2"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/col1"
        android:text="@string/des_conexidade" />

    <TextView
        android:id="@+id/linha2_resp"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/linha1_resp"
        android:layout_marginStart="10dp"
        android:textAlignment="center"
        android:layout_toEndOf="@id/col2" />

    <TextView
        android:id="@+id/col3"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/col2"
        android:text="@string/des_ordem_grafo" />

    <TextView
        android:id="@+id/linha3_resp"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/linha2_resp"
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/col3" />

    <TextView
        android:id="@+id/col4"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/col3"
        android:text="@string/des_tamanho_grafo" />

    <TextView
        android:id="@+id/linha4_resp"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/linha3_resp"
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/col4" />

    <TextView
        android:id="@+id/col5"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/col4"
        android:text="@string/des_g"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/linha6_resp"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/col5" />

    <TextView
        android:id="@+id/linha7_resp"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/linha6_resp" />

</RelativeLayout>